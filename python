#Définir le caractère à touver
#def input():
#caractere = str(input("Définissez votre caractère à trouver :"))
import random , string
print("Bonjour, bienvenue sur mon mini jeu.")
caractere = random.choice(string.ascii_lowercase)
#Initializer un compteur
compteur = 1

#Vérifier le caractère renvoyé par input tant que la valeur envoyée est différente de la valeur recherchée
while caractere != str(input("Entrez votre lettre :")):
    #Incrémenter le compteur
    compteur = compteur + 1
    print("Réessaye ce n'est pas la bonne lettre !")
else :
    #Afficher un message disant que la lettre a été touvée et le nombre d'essais avant d'y arriver.
    print("Bravo, vous avez trouvé la lettre recherchée après " + str(compteur) + " essais !")

#Vider le compteur
compteur = 0
caractere =" "
# FIN
