# DEBUT
from random import *

# Admettre la fonction randomPFC qui choisit aléatoirement un chiffre entre 1 et 3


def ordiPFC(valeurPC, ordiPFC):
    # Executer la fonction randomPFC
    valeurPC = randint(1, 3)
    if valeurPC == 1:
        ordiPFC = "Pierre"
    elif valeurPC == 2:
        ordiPFC = "Feuille"
    elif valeurPC == 3:
        ordiPFC = "Ciseaux"
    # retourner la fonction PFC(1 = "Pierre", 2 = "Feuille", 3 = "Ciseaux")
    return ordiPFC

# Définir la fonction PFC


def PFC(playerPFC, valeurJoueur):
    # Si PFC = 1
    if playerPFC == "Pierre":
        # Alors retourner "Pierre"
        valeurJoueur = "Pierre"
    # Sinon si PFC = 2
    elif playerPFC == "Feuille":
        # Alors retourner "Feuille"
        valeurJoueur = "Feuille"
    # Sinon si PFC = 3
    elif playerPFC == "Ciseaux":
        # Alors retourner "Ciseaux"
        valeurJoueur = "Ciseaux"
    elif playerPFC == "stop":
        # Afficher un message d'adieu, le nombre de partie final, ainsi que les win et les Loose
        valeurJoueur == print("Je suis triste de te voir partir si tôt, tu es actuellement à " + str(win) + " victoire(s), " + str(loose) + " défaite(s) et tu as fais " + str(compteurPartie) + " partie(s) !")
    return valeurJoueur, playerPFC


# initialiser les victoires
win = 0

# initialiser les défaites
loose = 0

# Initialiser compteurPartie qui est égal à 0
compteurPartie = 1

# Initialiser le pierre feuille ciseaux
# Afficher les règles du jeux et les différentes action possible afin d'avoir accès aux aides et performance du joueur
print("Bonjour et bienvenue, dans mon pierre feuille ciseaux, le jeu est simple, vous allez pouvoir choisir entre 3 possibilités, pierre, feuille et ciseaux, c'est un jeu de hasard, vous allez devoir gagner contre l'ordinateur. Bonne chance !")
# Demander au joueur si il est prêt par oui ou non (o / n)
ready = input("Êtes vous prêt ? oui / non ")
# Si le joueur est prêt
if ready == "oui":
    # Afficher qu'il démarre une nouvelle partie, que pour arrêter la partie il faut écrire "stop" et que 1 = Pierre, 2 = Feuille, 3 = Ciseaux
    print("Vous commencez une nouvelle partie ! Choisissez Pierre, Feuille ou Ciseaux (Pour arrêter la partie, écrivez stop)")
    # Tant que le playerPFC n'écrit pas "stop"
    # Définir la fonction playerPFC
    while playerPFC != "stop":
        playerPFC = input()
        # Si playerPFC choisit "Pierre" et que la réponse de ordiPFC est "Ciseaux"
        if playerPFC == "Pierre" and ordiPFC == "Ciseaux":
            # Alors afficher "Joueur a gagné"
            print("Joueur a gagné !")
            # Ajouter 1 à Win dans ratio WL
            win = win + 1
            # Ajouter 1 dans compteurPartie
            compteurPartie = compteurPartie + 1
        # Sinon si playerPFC choisit "Pierre" et que la réponse de ordiPFC est "Feuille"
        elif playerPFC == "Pierre" and ordiPFC == "Feuille":
            # Alors afficher "Ordi a gagné"
            print("Ordi a gagné !")
            # Ajouter 1 à Loose dans ratio WL
            loose = loose + 1
            # Ajouter 1 dans compteurPartie
            compteurPartie = compteurPartie + 1
        # Sinon si playerPFC choisit "Pierre" et que la réposne de ordiPFC est "Pierre"
        elif playerPFC == "Pierre" and ordiPFC == "Pierre":
            # Alors afficher "Égalité, dommage..."
            print("Égalité, dommage...")
